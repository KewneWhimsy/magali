const t = content[lang] || content.fr;
---

<Layout title={t.title} description={t.description} lang={lang}>
  
  <!-- Hero Section -->
  <section class="relative min-h-[400px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-secondary)]">
    <div class="absolute inset-0 bg-black/20"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white py-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg">
        {t.heroTitle}
      </h1>
      <p class="text-lg md:text-xl max-w-3xl mx-auto leading-relaxed drop-shadow-md font-light">
        {t.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Section Expertises - Utilisation du composant existant -->
  <ExpertiseCard lang={lang} />

  <!-- Section Services -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[var(--color-primary)]">
          {t.servicesTitle}
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          {t.servicesSubtitle}
        </p>
      </div>

      <div class="space-y-16">
        {t.services.map((service, index) => (
          <div class={`flex flex-col ${index % 2 === 1 ? 'lg:flex-row-reverse' : 'lg:flex-row'} gap-8 lg:gap-12 items-center`}>
            
            <!-- Image -->
            <div class="w-full lg:w-1/2">
              <div class="rounded-lg overflow-hidden shadow-lg">
                <OptimizeImage 
                  src={service.image}
                  alt={service.title}
                  class="w-full h-[300px] lg:h-[400px] object-cover"
                  loading="lazy"
                  widths={[400, 600, 800]}
                  sizes="(max-width: 1023px) 100vw, 50vw"
                />
              </div>
            </div>

            <!-- Content -->
            <div class="w-full lg:w-1/2">
              <div class="max-w-lg">
                <h3 class="text-3xl md:text-4xl font-bold mb-4 text-[var(--color-primary)]">
                  {service.title}
                </h3>
                
                <p class="text-lg text-gray-600 mb-6 font-medium">
                  {service.subtitle}
                </p>
                
                <ul class="space-y-3">
                  {service.points.map((point) => (
                    <li class="flex items-start">
                      <span class="text-[var(--color-primary)] mr-3 mt-1 text-lg">•</span>
                      <span class="text-gray-700">{point}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>

          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection 
    variant="gradient"
    lang={lang}
    title={t.ctaTitle}
    subtitle={t.ctaSubtitle}
    buttonText={t.ctaButton}
    buttonHref={`/${lang}/contact/`}
    imageSrc="/src/assets/img/bandeauabc.png"
    imageAlt="ABC Gourmet - Services conseil alimentaire"
  />
</Layout>
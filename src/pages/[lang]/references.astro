const t = content[lang] || content.fr;
---

<Layout title={t.title} description={t.description} lang={lang}>
  <style is:global>
h1, h2 {
    font-family: var(--font-satisfy);
}
</style>
  <!-- Hero Section -->
  <section class="relative min-h-[400px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-secondary)]">
    <div class="absolute inset-0 bg-black/20"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white py-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg">
        {t.heroTitle}
      </h1>
      <p class="text-lg md:text-xl max-w-3xl mx-auto leading-relaxed drop-shadow-md font-light">
        {t.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Résultats en chiffres -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-[var(--color-primary)]">
        {t.results.title}
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {t.results.stats.map((stat) => (
          <div class="card text-center">
            <div class="text-5xl md:text-6xl font-bold text-[var(--color-primary)] mb-4">
              {stat.number}
            </div>
            <h3 class="text-xl font-semibold mb-4 text-gray-800">
              {stat.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {stat.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Exemples de parcours client -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-[var(--color-primary)]">
        {t.clientCase.title}
      </h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Image d'illustration -->
        <div class="rounded-lg overflow-hidden shadow-lg">
          <OptimizeImage 
            src="/src/assets/img/cta.jpg"
            alt="ABC Gourmet - Parcours client"
            class="w-full h-[400px] object-cover"
            loading="lazy"
            widths={[400, 600, 800]}
            sizes="(max-width: 1023px) 100vw, 50vw"
          />
        </div>

        <!-- Processus -->
        <div class="space-y-8">
          <!-- Contexte -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-[var(--color-primary)] rounded-full flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
              1
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-2 text-[var(--color-primary)]">
                {t.clientCase.context.title}
              </h3>
              <p class="text-gray-600">
                {t.clientCase.context.text}
              </p>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-[var(--color-primary)] rounded-full flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
              2
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-4 text-[var(--color-primary)]">
                {t.clientCase.actions.title}
              </h3>
              <ul class="space-y-2">
                {t.clientCase.actions.items.map((item) => (
                  <li class="flex items-start">
                    <span class="text-[var(--color-primary)] mr-2 mt-1 text-sm">•</span>
                    <span class="text-gray-600 text-sm">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>

          <!-- Résultats -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-[var(--color-secondary)] rounded-full flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
              3
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-4 text-[var(--color-secondary)]">
                {t.clientCase.results.title}
              </h3>
              <ul class="space-y-2">
                {t.clientCase.results.items.map((item) => (
                  <li class="flex items-start">
                    <span class="text-[var(--color-secondary)] mr-2 mt-1 text-sm">•</span>
                    <span class="text-gray-600 text-sm">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Témoignages avec votre composant -->
  <TestimonialsCarousel lang={lang} />

  <!-- Partenaires -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 text-center mb-8">
      <h2 class="text-2xl font-bold text-[var(--color-primary)] mb-4">
        {lang === 'fr' ? 'Nos références et accréditations' : 
         lang === 'en' ? 'Our references and accreditations' : 
         'Unsere Referenzen und Akkreditierungen'}
      </h2>
    </div>
    <PartnersInfiniteScroller />
  </section>

  <!-- CTA Section -->
  <CTASection 
    variant="gradient"
    lang={lang}
    title={t.ctaTitle}
    subtitle={t.ctaSubtitle}
    buttonText={t.ctaButton}
    buttonHref={`/${lang}/contact/`}
    imageSrc="/src/assets/img/cta.jpg"
    imageAlt="ABC Gourmet - Résultats clients"
  />
</Layout>
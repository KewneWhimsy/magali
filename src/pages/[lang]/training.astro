---

<Layout title={t.title} description={t.description} lang={lang}>
  
  <section class="relative min-h-[400px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-secondary)]">
    <div class="absolute inset-0 bg-black/20"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white py-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg">
        {t.heroTitle}
      </h1>
      <p class="text-lg md:text-xl max-w-3xl mx-auto leading-relaxed drop-shadow-md font-light">
        {t.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Section Notre Ambition -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8 text-[var(--color-primary)] uppercase tracking-wide">
        {t.ambition.title}
      </h2>
      <div class="bg-[var(--color-primary)] h-1 w-16 mx-auto mb-8"></div>
      <ul class="space-y-4 text-gray-700">
        {t.ambition.points.map((point: string) => (
          <li class="flex items-start justify-center">
            <span class="text-[var(--color-primary)] mr-3 mt-1">•</span>
            <span class="text-lg">{point}</span>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Section Le Contenu -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8 text-[var(--color-primary)] uppercase tracking-wide">
        {t.content.title}
      </h2>
      <div class="bg-[var(--color-primary)] h-1 w-16 mx-auto mb-8"></div>
      
      <p class="text-gray-700 mb-6 leading-relaxed text-lg">
        {t.content.description}
      </p>
      <p class="font-semibold mb-6 text-lg text-[var(--color-secondary)]">
        {t.content.subtitle}
      </p>
      <p class="text-gray-700 leading-relaxed text-lg">
        {t.content.details}
      </p>
    </div>
  </section>

  <!-- Section Public Visé + Prérequis -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Public Visé -->
        <div class="card">
          <h2 class="text-2xl font-bold mb-6 text-[var(--color-primary)] uppercase tracking-wide">
            {t.publicVise.title}
          </h2>
          <div class="bg-[var(--color-primary)] h-1 w-16 mb-8"></div>
          
          <ul class="space-y-4">
            {t.publicVise.targets.map((target: string) => (
              <li class="flex items-start">
                <span class="text-[var(--color-primary)] mr-3 mt-1 text-lg">•</span>
                <span class="text-gray-700">{target}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Prérequis -->
        <div class="card">
          <h2 class="text-2xl font-bold mb-6 text-[var(--color-primary)] uppercase tracking-wide">
            {t.prerequis.title}
          </h2>
          <div class="bg-[var(--color-primary)] h-1 w-16 mb-8"></div>
          
          <div class="space-y-4 text-gray-700">
            <p class="leading-relaxed">{t.prerequis.description}</p>
            
            <div class="mt-6 space-y-3">
              <p class="font-medium">{t.prerequis.formats}</p>
              <p>{t.prerequis.elearning}</p>
              <p class="font-medium">{t.prerequis.duration}</p>
              <p>{t.prerequis.modules}</p>
              <p class="font-semibold text-[var(--color-secondary)]">{t.prerequis.tarification}</p>
            </div>
            
            <!-- Bouton Tarifs -->
            <div class="mt-8">
              <a href={`/${lang}/contact/?subject=demande-devis-formation`} class="btn-primary">
                {t.ctaButton}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Accordéons CSS -->
  <section class="pb-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="space-y-4">
        {t.accordions.map((accordion, index: number) => (
          <div class="accordion-item border border-gray-200 rounded-lg overflow-hidden bg-white shadow-sm">
            <input 
              type="checkbox" 
              id={`accordion-${index}`}
              class="sr-only"
            />
            <label 
              for={`accordion-${index}`}
              class="block w-full px-6 py-4 bg-gray-50 hover:bg-gray-100 transition-colors duration-200 cursor-pointer"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="accordion-toggle bg-[var(--color-primary)] text-white w-8 h-8 rounded mr-4 text-sm font-bold flex items-center justify-center"></span>
                  <span class="font-bold text-[var(--color-primary)] uppercase tracking-wide">{accordion.title}</span>
                </div>
                <svg class="accordion-arrow w-5 h-5 text-[var(--color-primary)] transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </label>
            <div class="accordion-content max-h-0 overflow-hidden transition-all duration-300">
              <div class="px-6 py-4 bg-white border-t border-gray-100">
                <ul class="space-y-3">
                  {accordion.content.map((item: string) => (
                    <li class="flex items-start">
                      <span class="text-[var(--color-primary)] mr-3 mt-1">•</span>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

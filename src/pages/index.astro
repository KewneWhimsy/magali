---
// src/pages/index.astro
// Page de redirection vers la version française par défaut
import Layout from "../layouts/layout.astro";
---

<Layout 
  title="ABC Gourmet - Redirection..." 
  description="Redirection vers la version linguistique appropriée"
  lang="fr"
>
  <meta http-equiv="refresh" content="0;url=/fr/" />
  
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <h1 class="text-2xl font-bold text-blue-600 mb-8">ABC Gourmet</h1>
    
    <p class="text-gray-600 mb-8">Choisissez votre langue / Choose your language / Wählen Sie Ihre Sprache</p>
    
    <div class="flex gap-4 flex-wrap justify-center">
      <a href="/fr/" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition-colors">
        Français
      </a>
      <a href="/en/" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition-colors">
        English
      </a>
      <a href="/de/" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition-colors">
        Deutsch
      </a>
    </div>
  </div>
</Layout>
---

<section class="py-16 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl text-center mb-12 text-[var(--color-primary)]">
      {content.title}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {content.items.map((expertise) => (
        <div class="card text-center">
          <div set:html={expertise.icon} />
          
          <h3 class="text-lg font-semibold mb-4 text-[var(--color-primary)] min-h-[3rem] flex items-center justify-center">
            {expertise.title}
          </h3>
          
          <ul class="text-gray-600 text-sm space-y-2 text-left">
            {expertise.points.map((point) => (
              <li class="flex items-start">
                <span class="text-[var(--color-primary)] mr-2 mt-0.5 text-xs">•</span>
                <span>{point}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>